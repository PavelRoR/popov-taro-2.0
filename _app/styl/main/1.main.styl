#main
	padding 0 0 60px
	text-align: center
	position relative
	background-color: #90284E
	background-image url(../img/backs/main-bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	color #fff
	&:before
		content: ''
		display block
		position: absolute
		top 0
		left 0
		right 0
		bottom: 0
		width 100%
		height 100%
		background-image url(../img/backs/main-dots.png)
		// background-repeat: repeat
		z-index 0
	.container
		position relative
		z-index 9
.main-title
	font-size: 80px
	font-family: PNBk
	text-transform: uppercase
	margin 50px 0
	line-height: 50px
	small
		font-size: 22px
		text-transform: lowercase
		display block
		font-family: ABk
.main-info
	font-size: 24px
	font-family: AB
	span
		display inline-block
		font-family: ABk
		font-size: 28px
		text-transform: uppercase
	&:last-of-type
		margin 30px 0 50px