#plan
	padding 50px 0 70px
	background-color: rgba(#cc5500,.01)
.course-text
	text-align: center
	font-size: 22px
	span
		font-family: AB
		font-size: 24px
		display: block
.course-info
	font-size: 20px
	text-align: center
	margin 20px 0 0
	span
		font-family: AB
.semester
	&-1
		padding 30px 0
		margin-top: 20px
	&-2
		padding 0 0 30px
	&-title
		font-family: ABk
		font-size: 28px
		margin-bottom: 30px
		text-transform: uppercase
.lesson
	border-radius: 3px
	overflow hidden
	width 100%
	max-width 260px
	margin 0 auto 30px
	position relative
	padding-left: 35px
	box-shadow: 0 2px 5px 5px rgba(#B76B27,.2)
	height 341px
	background-color #fff
	&-head
		position: absolute
		transform: rotate(-90deg)
		top: 155px;
		left: -156px;
		line-height: 30px;
		background-color:#c50;
		width: 341px;
		text-align: right;
		padding: 0 30px 0 0;
		&-title
			font-size: 18px
			font-family: PNBk
			text-transform: uppercase
			color #fff
	&-body
		padding 10px 15px 15px 5px
		&-subtitle
			font-size 18px
			font-family: ABk
			padding-bottom: 10px
			border-bottom: 1px solid rgba(#cc5500,.5)
			margin-bottom: 15px
			line-height: 1.3
		&-list
			li
				margin-left: 20px
				margin-bottom: 10px
				font-size: 16px
				&:last-child
					margin-bottom: 0
.lesson-bonus
	text-align: center
	font-size: 22px
	margin-bottom: 40px
	span
		font-family: ABk
		color #cc5500;
		display block